<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zavet || KaiAngel" Height="600" Width="800"
        Background="#FFE0F7FA">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Выберите задание от 1 до 30:" FontSize="16" Margin="10"/>
            <TextBox x:Name="TaskNumberTextBox" Width="100" FontSize="16" Margin="10" HorizontalAlignment="Center"/>
            <Button Content="Выполнить" Click="OnExecuteButtonClick" FontSize="16" Margin="10" Padding="10,5"/>
            <TextBlock x:Name="ErrorMessageText" Foreground="Red" FontSize="14" Margin="10" TextWrapping="Wrap"/>
            <TextBlock x:Name="TaskDescriptionText" FontSize="14" Margin="10" TextWrapping="Wrap"/>
            <StackPanel x:Name="InputPanel" Margin="10">
            </StackPanel>
            <TextBlock x:Name="ResultText" FontSize="16" Margin="10" TextWrapping="Wrap"/>
            </StackPanel>
    </Grid>
</Window>